<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TestFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="#ebebeb"
        android:padding="15dp"
        android:text="Kiểm tra"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <androidx.cardview.widget.CardView
        android:layout_width="300dip"
        android:layout_height="250dip"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_color_button_1">
            <TextView
                android:id="@+id/txtTest"
                android:layout_width="370dip"
                android:layout_height="wrap_content"
                android:paddingLeft="60dip"
                android:paddingRight="60dip"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="Đã học 24 từ mới. Bắt đầu kiểm tra?"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTest"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dip"
                android:layout_marginTop="20dip"
                android:layout_marginEnd="20dip"
                android:layout_marginBottom="20dip"
                android:backgroundTint="@color/bottom_nav"
                android:padding="20dip"
                android:text="Bắt đầu" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>